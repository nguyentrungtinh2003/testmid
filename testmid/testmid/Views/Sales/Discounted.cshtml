@model IEnumerable<testmid.Models.Data.Sale>

@{
    ViewData["Title"] = "Discounted Sales";
}

<h2>Discounted Sales</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Car.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Car.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Customer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Discount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
